<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <Button
        android:id="@+id/main2_buttonNext"
        android:layout_width="144dp"
        android:layout_height="66dp"
        android:layout_marginBottom="30dp"
        android:text="Next"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/main2_textViewTitle"
        android:layout_width="341dp"
        android:layout_height="70dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="Make Your Favorite Ice Cream"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main2_textViewQuestion"
        android:layout_width="364dp"
        android:layout_height="66dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="What Container Do You Want?"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main2_textViewTitle" />

    <TextView
        android:id="@+id/main2_textViewBowl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="50dp"
        android:text="Bowl"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main2_textViewQuestion" />

    <TextView
        android:id="@+id/main2_textViewCone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:text="Cone"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/main2_textViewBowl"
        app:layout_constraintStart_toEndOf="@+id/main2_textViewBowl"
        app:layout_constraintTop_toTopOf="@+id/main2_textViewBowl" />

    <Spinner
        android:id="@+id/main2_spinner"
        android:layout_width="241dp"
        android:layout_height="48dp"
        android:layout_marginTop="37dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main2_textViewBowl" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        app:layout_constraintEnd_toEndOf="@+id/main2_spinner"
        app:layout_constraintStart_toStartOf="@+id/main2_spinner"
        app:layout_constraintTop_toBottomOf="@+id/main2_spinner"
        tools:srcCompat="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>